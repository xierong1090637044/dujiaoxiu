.example
{
  padding: 4px 10px;
  height: 27px;
  background: #4BD321;
  border-radius: 8px;
  position: absolute;
  top:-38px;
  left: 50.8%; 
  color: #fff;
}
.example::before {
    content: '';
    width: '';
    height: '';
    border: 10px solid transparent; /*调整小三角形的大小*/
    border-top-color: #4BD321;/*改变小三角的颜色（最好就是和父级div的背景颜色相同）;bottom是用于调整小三角的方向*/
    position: absolute;
    right: 45%;/*调整小三角形的位置*/
    
    top: 27px;/*调整小三角形的位置*/
    margin-top: 0px;/*调整小三角形的位置*/
    
}
