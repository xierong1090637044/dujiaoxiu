.frist_content
{
  color: #333;
  text-align: center;
  background: #fff;
  padding: 15px;
}
.second_content
{
  padding: 15px;
  background: #fff;
  margin-top: 10px;
  width: 100%;
}

.sc_prodetail_image
{
  width: 70px;
  height: 70px;
  border-radius: 8px;
  margin-right: 10px;
}
.sc_pro_name
{
  font-size: 14px;
  color: #000;
  font-weight: bold;
}

.thrid_modify_but
{
  padding: 0px 8px;
  color: #999;
  border: 1px solid#999;
  border-radius: 20px;
}
.thrid_address_text
{
  color: #999;
}
.thrid_thank_line
{
  position: absolute;
  width: 100%;
  height: 2px;
  left: 0;
  top: 0;
}

.sign_image_style
{
  width: 24px;
  height: 24px;
}
.sign_text_pay_for
{
  color: #FE0036;
  font-size: 16px;
  font-weight: bold;
  margin: 0 5px;
}

.four_content_padding
{
  padding: 12px 0;
  border-bottom:1px solid#ddd;
}
.four_content
{
  padding: 15px 15px 0;
  background: #fff;
  margin-top: 10px;
}
.goto_pay_button
{
  line-height: 44px;
  color: #fff;
  background: linear-gradient(to right, #FFC107 , #F5A623); /* 标准的语法 */
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.state2_class
{
  display: flex;
  justify-content: center;
  height: 44px;
  align-content: center;
  background: #fff;
  padding: 6px 0;
}

.state2_button
{
  border: 1px solid#999;
  border-radius: 20px;
  color: #999;
  height: 32px;
  line-height: 32px;
  padding: 0 8px;
}

.state4_thank_button
{
  line-height: 44px;
  color: #fff;
  background: linear-gradient(to right, #FFEB3B , #FFC107); /* 标准的语法 */
  text-align: center;
  width: 128px;
  margin: 0 auto;
  border-radius: 20px;
}