@import "../../../utils/wxParse.wxss";
page{
  background: #fff;
}
.thrid-view-wrap
{
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0px;
  bottom: 3px;
  width: 100%;
  color: #fff;
  padding: 10px 20px 0;
  background: linear-gradient(to top,rgba(0,0,0,0.4), rgba(255,255,255,0));
  line-height: 35px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-weight: bold;
  font-size: 16px;
}

.thrid-view-wrap1
{
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0px;
  bottom: 0px;
  width: 100%;
  color: #fff;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-size: 12px;
}
.thrid_text_desc
{
  color:#000;
  font-weight: bold;
  padding: 10px 10px;
  font-size: 16px;
}

.fixed_item
{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 5px 15px;
  border-top: 1px solid#ddd;
}