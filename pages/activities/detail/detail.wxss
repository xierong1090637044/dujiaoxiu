@import "../../../utils/wxParse.wxss";
page{
  background: #fff;
}
.thrid-view-wrap
{
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0px;
  bottom: 3px;
  width: 100%;
  color: #fff;
  padding: 10px 20px 0;
  background: linear-gradient(to top,rgba(0,0,0,0.4), rgba(255,255,255,0));
  line-height: 35px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-weight: bold;
  font-size: 16px;
}

.thrid-view-wrap1
{
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0px;
  bottom: 3px;
  width: 100%;
  color: #fff;
  padding: 10px 20px 0;
  background: rgba(0,0,0,0.4);
  line-height: 200px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  font-weight: bold;
  font-size: 16px;
}
.thrid_text_desc
{
  color:#000;
  font-weight: bold;
  padding: 10px 10px;
  font-size: 16px;
}

.fixed_item
{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 5px 15px;
  border-top: 1px solid#ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.display_flex_bet
{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment_avatar
{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.replies_view
{
  padding: 5px 10px;
  background: #f7f5f6;
  margin:10px 0;
}

.selected_text
{
  color: #e72e62
}