
<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper">
  <swiper-item wx:for="{{tower}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class='bg-img shadow-blur'>
      <image src='{{item.url}}' style='width:100%;height:100%'></image>
    </view>
  </swiper-item>
</swiper>
